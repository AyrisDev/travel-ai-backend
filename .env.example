# ===========================================
# Travel AI Backend - Environment Configuration
# ===========================================

# Server Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/travel_ai
MONGODB_TEST_URI=mongodb://localhost:27017/travel_ai_test

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Authentication & Security
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=12
ENCRYPTION_KEY=your-32-character-encryption-key

# Google Gemini AI Configuration
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-1.5-flash

# External APIs
# Exchange Rate API (for currency conversion)
EXCHANGE_API_KEY=your-exchange-rates-api-key
EXCHANGE_API_URL=https://api.exchangerate-api.com/v4/latest
FALLBACK_EXCHANGE_API_URL=https://api.fxratesapi.com/latest

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_TRAVEL_MAX=5
RATE_LIMIT_AUTH_MAX=10

# Monitoring & Metrics
ENABLE_PROMETHEUS=true
METRICS_PORT=9090
LOG_LEVEL=info

# Cache Configuration
CACHE_TTL_SHORT=300
CACHE_TTL_MEDIUM=1800
CACHE_TTL_LONG=3600

# Email Configuration (for future use)
EMAIL_SERVICE=
EMAIL_USER=
EMAIL_PASS=
EMAIL_FROM=

# File Upload Configuration
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Background Job Configuration
QUEUE_CONCURRENCY=5
JOB_TIMEOUT=300000

# Alert Configuration
ALERT_EMAIL=
ALERT_WEBHOOK_URL=
ENABLE_ALERTS=false

# Development/Testing
ENABLE_SWAGGER=true
ENABLE_DEBUG_LOGS=false
MOCK_EXTERNAL_APIS=false